<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:id="@+id/ll_search_filter_listview_child"
    android:background="@color/tealishThree_60">

    <TextView
        android:id="@+id/search_filter_listview_child_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:background="@color/strong_pink"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="12dp"/>
    <TextView
        android:id="@+id/search_filter_listview_child_text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Extra Filter Option"
        android:textSize="19sp"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:layout_weight="1"/>


</LinearLayout>
